{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build For Linux",
            "command": "/usr/bin/g++",
            "args": [
                "-g",
                "-std=c++20",
                "${workspaceFolder}/src/Main.cpp",
                "${workspaceFolder}/src/files/Files.cpp",
                "${workspaceFolder}/src/engine/audio/Audio.cpp",
                "${workspaceFolder}/src/engine/audio/AudioFile.cpp",
                "${workspaceFolder}/src/engine/camera/BaseCamera.cpp",
                "${workspaceFolder}/src/engine/camera/OrthoCamera.cpp",
                "${workspaceFolder}/src/engine/camera/PerspCamera.cpp",
                "${workspaceFolder}/src/engine/graphics/model/Mesh.cpp",
                "${workspaceFolder}/src/engine/graphics/model/ModelLoader.cpp",
                "${workspaceFolder}/src/engine/graphics/shader/ModelShader.cpp",
                "${workspaceFolder}/src/engine/graphics/shader/Shader.cpp",
                "${workspaceFolder}/src/engine/graphics/shader/TextShader.cpp",
                "${workspaceFolder}/src/engine/graphics/shader/TextureShader.cpp",
                "${workspaceFolder}/src/engine/graphics/texture/lodepng.cpp",
                "${workspaceFolder}/src/engine/graphics/texture/Texture.cpp",
                "${workspaceFolder}/src/engine/input/joystick/JoystickInput.cpp",
                "${workspaceFolder}/src/engine/input/key/KeyInput.cpp",
                "${workspaceFolder}/src/engine/input/mouse/MouseInput.cpp",
                "${workspaceFolder}/src/engine/math/JMath.cpp",
                "${workspaceFolder}/src/engine/utils/WindowInfo.cpp",
                "${workspaceFolder}/src/engine/utils/WindowSize.cpp",
                "-o",
                "${workspaceFolder}/out/linux/Main",
                "-L${workspaceFolder}/out/linux/libs",
                "-lGLEW",
                "-lglfw3",
                "-lopenal",
                "-lalut",
                "-lX11",
                "-lrt",
                "-lpthread",
                "-lm",
                "-ldl",
                "-lGL"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },


        {
            "type": "cppbuild",
            "label": "C/C++: g++ build For Window",
            "command": "x86_64-w64-mingw32-g++",
            "args": [
                "-g",
                "-std=c++17",
                "-static-libgcc",
                "-static-libstdc++",
                "${workspaceFolder}/src/Main.cpp",
                "${workspaceFolder}/src/files/Files.cpp",
                "${workspaceFolder}/src/engine/audio/Audio.cpp",
                "${workspaceFolder}/src/engine/audio/AudioFile.cpp",
                "${workspaceFolder}/src/engine/camera/BaseCamera.cpp",
                "${workspaceFolder}/src/engine/camera/OrthoCamera.cpp",
                "${workspaceFolder}/src/engine/camera/PerspCamera.cpp",
                "${workspaceFolder}/src/engine/graphics/model/Mesh.cpp",
                "${workspaceFolder}/src/engine/graphics/model/ModelLoader.cpp",
                "${workspaceFolder}/src/engine/graphics/shader/ModelShader.cpp",
                "${workspaceFolder}/src/engine/graphics/shader/Shader.cpp",
                "${workspaceFolder}/src/engine/graphics/shader/TextShader.cpp",
                "${workspaceFolder}/src/engine/graphics/shader/TextureShader.cpp",
                "${workspaceFolder}/src/engine/graphics/texture/lodepng.cpp",
                "${workspaceFolder}/src/engine/graphics/texture/Texture.cpp",
                "${workspaceFolder}/src/engine/input/joystick/JoystickInput.cpp",
                "${workspaceFolder}/src/engine/input/key/KeyInput.cpp",
                "${workspaceFolder}/src/engine/input/mouse/MouseInput.cpp",
                "${workspaceFolder}/src/engine/math/JMath.cpp",
                "${workspaceFolder}/src/engine/utils/WindowInfo.cpp",
                "${workspaceFolder}/src/engine/utils/WindowSize.cpp",
                "-o",
                "${workspaceFolder}/out/window/Main",
                "-lglfw3dll",
                "-lglew32",
                "-lopengl32",
                "-lgdi32",
                "-lpthread",
                "-lwinpthread",
                "${workspaceFolder}/out/window/OpenAL32.dll"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        },
    ],
    "version": "2.0.0"
}